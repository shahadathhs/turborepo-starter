{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build", "lint"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": true
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "cache": true
    },
    "format": {
      "dependsOn": ["^format"],
      "cache": true
    },
    "format:check": {
      "dependsOn": ["^format:check"],
      "cache": true
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "clean:turbo": {
      "dependsOn": ["^clean:turbo"]
    }
  }
}
